# {{ ansible_managed }}

[epel]
name=Extra Packages for Enterprise Linux {{ ansible_distribution_major_version }} - {{ ansible_machine }}
#baseurl=http://download.fedoraproject.org/pub/epel/{{ ansible_distribution_major_version }}/{{ ansible_machine }}
mirrorlist=https://mirrors.fedoraproject.org/metalink?repo=epel-{{ ansible_distribution_major_version }}&arch={{ ansible_machine }}
failovermethod=priority
enabled=1
gpgcheck=1

[epel-debuginfo]
name=Extra Packages for Enterprise Linux {{ ansible_distribution_major_version }} - {{ ansible_machine }} - Debug
#baseurl=http://download.fedoraproject.org/pub/epel/{{ ansible_distribution_major_version }}/{{ ansible_machine }}/debug
mirrorlist=https://mirrors.fedoraproject.org/metalink?repo=epel-debug-{{ ansible_distribution_major_version }}&arch={{ ansible_machine }}
failovermethod=priority
enabled=0
gpgcheck=1

[epel-source]
name=Extra Packages for Enterprise Linux {{ ansible_distribution_major_version }} - {{ ansible_machine }} - Source
#baseurl=http://download.fedoraproject.org/pub/epel/{{ ansible_distribution_major_version }}/SRPMS
mirrorlist=https://mirrors.fedoraproject.org/metalink?repo=epel-source-{{ ansible_distribution_major_version }}&arch={{ ansible_machine }}
failovermethod=priority
enabled=0
gpgcheck=1
